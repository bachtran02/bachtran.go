services:
  bachtrango:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: bachtrango
    labels:
      - "traefik.enable=true"
      - "traefik.http.routers.site.rule=Host(`bachtran.dev`)"
      - "traefik.http.routers.site.entrypoints=websecure"
      - "traefik.http.routers.site.tls.certresolver=myresolver"
      - "traefik.http.routers.site.tls=true"
      - "traefik.http.services.site.loadbalancer.server.port=80"
    restart: unless-stopped

  traefik:
    image: "traefik:latest"
    container_name: "traefik"
    command:
      - "--api.insecure=true"
      - "--providers.docker=true"
      - "--providers.docker.exposedbydefault=false"
      - "--entryPoints.websecure.address=:443"
      - "--certificatesresolvers.myresolver.acme.dnschallenge=true"
      - "--certificatesresolvers.myresolver.acme.dnschallenge.provider="
      - "--certificatesresolvers.myresolver.acme.email="
      - "--certificatesresolvers.myresolver.acme.storage=/letsencrypt/acme.json"
    ports:
      - "443:443"
    restart: unless-stopped
    environment:
      - "CF_API_EMAIL="
      - "CF_DNS_API_TOKEN="
    volumes:
      - "./letsencrypt:/letsencrypt"
      - "/var/run/docker.sock:/var/run/docker.sock:ro"